<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="upgrade-insecure-requests" />
        <policy id="default-src">
            <values>
                <value id="default-prismicio" type="host">*.prismic.io</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="default-prismicio" type="host">images.prismic.io</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
