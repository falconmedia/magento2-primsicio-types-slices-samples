<?xml version="1.0" encoding="UTF-8" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <block name="footer_image_with_caption" class="Elgentos\PrismicIO\Block\Template"
               template="Elgentos_PrismicIO::slices/footer/image-with-caption/wrapper.phtml">

            <block class="Elgentos\PrismicIO\Block\Dom\Raw"  template="primary.column_width" as="width"/>
            <block class="Elgentos\PrismicIO\Block\Dom\Raw"  template="primary.background_color" as="background"/>
            <block class="Elgentos\PrismicIO\Block\Dom\Raw"  template="primary.text_color" as="color"/>

            <block class="Elgentos\PrismicIO\Block\Dom\Plain" template="primary.title_first.0.text" as="heading" />
            <block class="Elgentos\PrismicIO\Block\Dom\Plain" template="primary.title_second.0.text" as="heading_two"/>
            <block class="Elgentos\PrismicIO\Block\Dom\Raw" template="primary.image.url" as="image"/>
            <block class="Elgentos\PrismicIO\Block\Dom\Text" template="primary.description" as="description"/>
            <block class="Elgentos\PrismicIO\Block\Dom\Plain" template="primary.button_label" as="button_label"/>
            <block class="Elgentos\PrismicIO\Block\Dom\Link" template="primary.button_link" as="button_link"/>


        </block>

    </body>
</page>
