<?xml version="1.0" encoding="UTF-8" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <block name="footer_newsletter" class="Elgentos\PrismicIO\Block\Template"
               template="Elgentos_PrismicIO::components/slice/footer/newsletter/wrapper.phtml">

            <block class="Elgentos\PrismicIO\Block\Dom\Raw" template="primary.column_width" as="width"/>
            <block class="Elgentos\PrismicIO\Block\Dom\Plain" template="primary.title.0.text" as="heading"/>
            <block class="Elgentos\PrismicIO\Block\Dom\Text" template="primary.description"  as="description"/>

            <block name="footer_newsletter.subscribe" class="Elgentos\PrismicIO\Block\Container"/>
        </block>
    </body>
</page>
