<?xml version="1.0" encoding="UTF-8" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>

        <block name="footer_logo"
               class="Elgentos\PrismicIO\Block\Template"
               template="Elgentos_PrismicIO::slices/footer/logo/wrapper.phtml">
            <arguments>
                <argument name="reference" xsi:type="string">primary</argument>
            </arguments>

            <block class="Elgentos\PrismicIO\Block\Dom\Raw"  template="column_width" as="width"/>
            <block class="Elgentos\PrismicIO\Block\Dom\Raw"  template="logo.url" as="image"/>

        </block>
    </body>
</page>
