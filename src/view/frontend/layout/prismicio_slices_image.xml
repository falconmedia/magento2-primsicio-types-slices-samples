<?xml version="1.0" encoding="UTF-8" ?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <block name="image"
               class="Elgentos\PrismicIO\Block\Template"
               template="Elgentos_PrismicIO::elements/slice/full-width-image.phtml"
        >
            <block name="fwi_link" class="Elgentos\PrismicIO\Block\Dom\Link" template="primary.fwi_link" />
            <block name="full_width_image" class="Elgentos\PrismicIO\Block\Template" template="Elgentos_PrismicIO::elements/image.phtml">
                <arguments>
                    <argument name="reference" xsi:type="string">primary.full_width_image</argument>
                </arguments>
            </block>
        </block>
    </body>
</page>
